{
    "name": "regex-batch-renamer",
    "productName": "Regex Batch Renamer",
    "description": "A powerful tool for batch renaming files using regular expressions.",
    "author": {
        "name": "junyou",
        "email": "junyou1998@gmail.com"
    },
    "private": true,
    "version": "0.1.7",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build && electron-builder",
        "preview": "vite preview"
    },
    "dependencies": {
        "marked": "^17.0.1",
        "pinia": "^3.0.4",
        "uuid": "^13.0.0",
        "vue": "^3.4.21",
        "vue-i18n": "^9.14.5"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.18",
        "@types/uuid": "^10.0.0",
        "@vitejs/plugin-vue": "^5.0.4",
        "electron": "^28.3.3",
        "electron-builder": "^24.13.3",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.2.2",
        "vite": "^5.1.6",
        "vite-plugin-electron": "^0.28.4",
        "vite-plugin-electron-renderer": "^0.14.5",
        "vue-tsc": "^2.0.6"
    },
    "main": "dist-electron/main.cjs",
    "build": {
        "appId": "com.junyou.regexbatchrenamer",
        "productName": "Regex Batch Renamer",
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "directories": {
            "output": "dist",
            "buildResources": "public"
        },
        "mac": {
            "identity": null,
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.utilities",
            "icon": "public/icon-mac.png"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "public/icon.ico",
            "verifyUpdateCodeSignature": false,
            "sign": null
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "public/icon.png",
            "category": "Utility"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "electron",
            "esbuild"
        ]
    }
}